<!DOCTYPE html>
<% layout('layout') -%>

<div class="row">
	<div class="large-12 columns">
		<h2>Records of the lights</h2>
		<p>Here you can watch the different medium values for the lights in your home per month</p>
		<hr />
	</div>
</div>

<div class="row">
	<div class="large-12 columns">
		<div id="chartContainer"></div>
	</div>
</div>

<script type="text/javascript" src="script/canvasjs-1.3.0/canvasjs.min.js"></script>

<%var colors_lights = new Array();%>
	<%for(var i in values_lights){%>
		<%if(values_lights[i]>20){%>
			<%colors_lights[i] = "red";%>
		<%}else{%>
			<%colors_lights[i] = "green";%>
		<%}%>
	<%}%>

<script type="text/javascript">
  window.onload = function () {
	    var chart = new CanvasJS.Chart("chartContainer", {

	      title:{
	        text: "Lights per month"              
	      },
	      data: [//array of dataSeries              
	        { //dataSeries object

	         /*** Change type "column" to "bar", "area", "line" or "pie"***/
	         type: "column",
	         dataPoints: [
		         { label: "Jan", y: <%-values_lights[0]%>, color: "<%-colors_lights[0]%>" },
		         { label: "Feb", y: <%-values_lights[1]%>, color: "<%-colors_lights[1]%>" },
		         { label: "March", y: <%-values_lights[2]%>, color: "<%-colors_lights[2]%>" },                                    
		         { label: "Apr", y: <%-values_lights[3]%>, color: "<%-colors_lights[3]%>" },
		         { label: "May", y: <%-values_lights[4]%>, color: "<%-colors_lights[4]%>" },
		         { label: "Jun", y: <%-values_lights[5]%>, color: "<%-colors_lights[5]%>" },
		         { label: "Jul", y: <%-values_lights[6]%>, color: "<%-colors_lights[6]%>" },
		         { label: "Aug", y: <%-values_lights[7]%>, color: "<%-colors_lights[7]%>" },
		         { label: "Sept", y: <%-values_lights[8]%>, color: "<%-colors_lights[8]%>" },
		         { label: "Oct", y: <%-values_lights[9]%>, color: "<%-colors_lights[9]%>" },
		         { label: "Nov", y: <%-values_lights[10]%>, color: "<%-colors_lights[10]%>" },
		         { label: "Dec", y: <%-values_lights[11]%>, color: "<%-colors_lights[11]%>" }
	         ]
	       }
	       ]
	     });

	    chart.render();
  }
</script>