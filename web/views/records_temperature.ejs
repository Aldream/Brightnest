<!DOCTYPE html>
<% layout('layout') -%>


<div class="row">
	<div class="large-12 columns">
		<h2>Records of the temperature</h2>
		<p>Here you can watch the different medium temperatures in your home per month</p>
		<hr />
	</div>
</div>

<div class="row">
	<div class="large-12 columns">
		<div id="chartContainer"></div>
	</div>
</div>

<script type="text/javascript" src="script/canvasjs-1.3.0/canvasjs.min.js"></script>

<%var colors_temperature = new Array();%>
	<%for(var i in values_temperature){%>
		<%if(values_temperature[i]>20){%>
			<%colors_temperature[i] = "red";%>
		<%}else{%>
			<%colors_temperature[i] = "green";%>
		<%}%>
	<%}%>

<script type="text/javascript">
  window.onload = function () {
	    var chart = new CanvasJS.Chart("chartContainer", {

	      title:{
	        text: "Temperature per month"              
	      },
	      data: [//array of dataSeries              
	        { //dataSeries object

	         /*** Change type "column" to "bar", "area", "line" or "pie"***/
	         type: "column",
	         dataPoints: [
		         { label: "Jan", y: <%-values_temperature[0]%>, color: "<%-colors_temperature[0]%>" },
		         { label: "Feb", y: <%-values_temperature[1]%>, color: "<%-colors_temperature[1]%>" },
		         { label: "March", y: <%-values_temperature[2]%>, color: "<%-colors_temperature[2]%>" },                                    
		         { label: "Apr", y: <%-values_temperature[3]%>, color: "<%-colors_temperature[3]%>" },
		         { label: "May", y: <%-values_temperature[4]%>, color: "<%-colors_temperature[4]%>" },
		         { label: "Jun", y: <%-values_temperature[5]%>, color: "<%-colors_temperature[5]%>" },
		         { label: "Jul", y: <%-values_temperature[6]%>, color: "<%-colors_temperature[6]%>" },
		         { label: "Aug", y: <%-values_temperature[7]%>, color: "<%-colors_temperature[7]%>" },
		         { label: "Sept", y: <%-values_temperature[8]%>, color: "<%-colors_temperature[8]%>" },
		         { label: "Oct", y: <%-values_temperature[9]%>, color: "<%-colors_temperature[9]%>" },
		         { label: "Nov", y: <%-values_temperature[10]%>, color: "<%-colors_temperature[10]%>" },
		         { label: "Dec", y: <%-values_temperature[11]%>, color: "<%-colors_temperature[11]%>" }
	         ]
	       }
	       ]
	     });

	    chart.render();
  }
</script>